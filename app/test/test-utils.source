#!/bin/bash

function handle_test_exit_status {
    [[ "${#}" != "4" ]] \
        && exit "1"
    
    local expected="${1}"
    local received="${2}"
    local test_num="${3}"
    local script_name="${4}"

    if [[ "${expected}" != "${received}" ]]
    then
        echo "Script: ${script_name}, test ${test_num}, expected: '${expected}', received: '${received}'"
        exit "2"
    fi
}